extends base.pug


block scripts
  script(src='/static/index.js.js')

block style 
  style
    include ../static/style.css
    include ../static/styleContact.css

block content 
    div.container
        h1  Contact Us
        form(action="/contact", method="post", class="myForm") 
            input(type="text", class="myInput", name="name" placeholder="Enter your name")
            input(type="phone", class="myInput", name="phone" placeholder="Enter your phone")
            input(type="email", class="myInput", name="email" placeholder="Enter your email")
            input(type="adress", class="myInput", name="adress" placeholder="Enter your adress")
            input(type="desc", class="myInput", name="desc" placeholder="Enter your concern")
            div.render
                button(class="btn", type="submit")
                    | Submit 
                button(class="btn", type="reset")
                    | Reset 